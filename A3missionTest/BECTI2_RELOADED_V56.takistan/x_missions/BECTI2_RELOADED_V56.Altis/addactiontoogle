//names

SwitchPrimary
SwitchHandgun
SwitchSecondary

//fire the actions
inputAction "SwitchPrimary";
inputAction "SwitchHandgun";
inputAction "SwitchSecondary";

//conditions #weapon class name or "" if no primary weapon f.e.

((currentWeapon player)==(primaryWeapon player))

((currentWeapon player)==(secondaryWeapon player))

((currentWeapon player)==(handgunWeapon  player))

//c for primary option
(!((primaryWeapon player)=="")&&!((currentWeapon player)==(primaryWeapon player)))

(!((secondaryWeapon player)=="")&&!((currentWeapon player)==(secondaryWeapon player)))

(!((handgunWeapon player)=="")&&!((currentWeapon player)==(handgunWeapon player)))

//addaction

object addAction [title, script, arguments, priority, showWindow, hideOnUse, shortcut, condition, positionInModel, radius, radiusView, showIn3D, available, textDefault, textToolTip]

//actions
player addAction [(localize "STR_BECTI2_toogle_primary"),{inputAction "SwitchPrimary";},[],0.5,false,true,'',(!((primaryWeapon player)=="")&&!((currentWeapon player)==(primaryWeapon player)))];
player addAction [(localize "STR_WF_TOOLTIP_FilterButtonSidearm"),{inputAction "SwitchHandgun";},[],0.5,false,true,'',(!((handgunWeapon player)=="")&&!((currentWeapon player)==(handgunWeapon player)))];
player addAction [(localize "STR_BECTI2_toogle_secondary"),{inputAction "SwitchSecondary";},[],0.5,false,true,'',(!((secondaryWeapon player)=="")&&!((currentWeapon player)==(secondaryWeapon player)))];



